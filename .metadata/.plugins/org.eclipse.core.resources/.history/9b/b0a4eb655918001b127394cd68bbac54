package yArrays;

import java.util.Random;

public class yArrays {
	
	static Random rnd = new Random();
	
	public static void main(String[] args) {
		int fil = 0 + rnd.nextInt(10); 
		int col = 0 + rnd.nextInt(10); 
		int[][] matriz = new int[fil][col];
		
		generarMatriz(matriz);
		mostrarMatriz(matriz);
	}
	
	/**
	 * Genera una matriz
	 * @param m la matriz a generar
	 * @return devuelve la matriz generada
	 */
	public static int[][] generarMatriz(int[][] m) {
		for (int i = 0; i < m.length; i++) {
			for (int j = 0; j < m[i].length; j++) {
				m[i][j] = 0 + rnd.nextInt(100); 
			}
		}
		return m;
	}
	
	public static void mostrarMatriz(int[][] m) {
		for (int i = 0; i < m.length; i++) {
			for (int j = 0; j < m[i].length; j++) {
				System.out.print("[" + m[i][j] + "] ");
			}
			System.out.println();
		}
	}

	/**
	 * Devuelve un vector con los números de la diagonal de la matriz.
	 * 
	 * @param m es la matriz que recibe
	 * @return devuelve el vector con los numeros que forman la diagonal
	 */
	public static int[][] diagonal(int[][] m) {
		for (int i = 0; i < m.length; i++) {
			for (int j = 0; j < m[i].length; j++) {
				if (i != j) {
					m[i][j] = 0;
				}
			}
		}
		return m;
	}

}
